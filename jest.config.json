{
    "roots": [
      "<rootDir>"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/.jest/setup-tests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/.jest/__mocks__/fileMock.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx|png|svg)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss|png)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":  "<rootDir>/.jest/__mocks__/fileMock.js",
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@config(.*)$": "<rootDir>/src/config$1",
      "^@enums(.*)$": "<rootDir>/src/enums$1",
      "^@hooks(.*)$": "<rootDir>/src/hooks$1",
      "^@layouts(.*)$": "<rootDir>/src/layouts$1",
      "^@locales(.*)$": "<rootDir>/src/locales$1",
      "^@pages(.*)$": "<rootDir>/src/pages$1",
      "^@services(.*)$": "<rootDir>/src/services$1",
      "^@store(.*)$": "<rootDir>/src/store$1",
      "^@utils(.*)$": "<rootDir>/src/utils$1",
      "^@types(.*)$": "<rootDir>/src/@types$1"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  }